# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Settings module - use config.settings.local for development, config.settings.production for production
DJANGO_SETTINGS_MODULE=config.settings.local

# Production: Set ALLOWED_HOSTS for production deployments
# ALLOWED_HOSTS=your-domain.com,*.railway.app,*.render.com,*.herokuapp.com

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/kapok

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Django API Token (optional - for securing internal API access)
KAPOK_API_TOKEN=your-api-token

# MCP Server Configuration
# HTTP transport is served by Django at /mcp endpoint
# Stdio transport: use `python manage.py stdio_server`
MCP_BEARER_TOKEN=your-bearer-token-here

# Internal API URL (used by MCP tools to communicate with Django REST API)
KAPOK_API_URL=http://localhost:8000
