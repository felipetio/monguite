# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Settings module - use config.settings.local for development, config.settings.production for production
DJANGO_SETTINGS_MODULE=config.settings.local

# Production: Set ALLOWED_HOSTS for production deployments
# ALLOWED_HOSTS=your-domain.com,*.railway.app,*.render.com,*.herokuapp.com

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/monguite

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Django API Token (optional - for securing internal API access)
MONGUITE_API_TOKEN=your-api-token

# MCP Server Configuration
MCP_TRANSPORT=http
MCP_HOST=0.0.0.0
MCP_PORT=8001

# Legacy API Key Authentication (for backward compatibility)
# MCP_API_KEY=your-mcp-api-key-here

# OAuth 2.0 Authentication (recommended for production)
OAUTH_ENABLED=true
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret-here
OAUTH_JWT_SECRET=your-jwt-signing-secret-here-min-32-chars
OAUTH_TOKEN_EXPIRY=3600

# Internal API URL (used by MCP server to communicate with Django)
MONGUITE_API_URL=http://localhost:8000
